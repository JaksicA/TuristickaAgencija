@model TuristickaAgencija.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rezervisite ovo putovanje</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="SmestajId" />
                <input type="hidden" asp-for="UserId" value="fhdsuiofhods" />
            </div>
            
            <div class="form-group">
                <label asp-for="PrevozId" class="control-label"></label>
                <select asp-for="PrevozId" class ="form-control" asp-items="ViewBag.PrevozId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Rezervisi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SmestajUaranzmanu" asp-controller="Smestaji" asp-route-aranzmanId="@ViewBag.AranzmanId">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
