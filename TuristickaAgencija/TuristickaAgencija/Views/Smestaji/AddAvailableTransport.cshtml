@model TuristickaAgencija.ViewModels.CreatePrevozViewModel 

<form asp-controller="Smestaji" asp-action="DodajPrevoz">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <select asp-for="PrevozId" asp-items="Model.DostupniPrevoz" class="form-control">
            <option>Odaberite prevoz</option>
        </select>
        <input type="hidden" asp-for="SmestajId" />
        <span asp-validation-for="PrevozId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Potvrdi" class="btn btn-primary float-right" />
    </div>
</form>