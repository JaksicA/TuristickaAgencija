@model TuristickaAgencija.Models.Aranzman

@{
    ViewData["Title"] = "Novi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novi aranzman</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrojDana" class="control-label"></label>
                <input asp-for="BrojDana" class="form-control" />
                <span asp-validation-for="BrojDana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesto" class="control-label"></label>
                <input asp-for="Mesto" class="form-control" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popust" class="control-label"></label>
                <input asp-for="Popust" class="form-control" />
                <span asp-validation-for="Popust" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PonudaId" class="control-label"></label>
                <select asp-for="PonudaId" class ="form-control" asp-items="ViewBag.PonudaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Sacuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
