@model TuristickaAgencija.Models.Ponuda

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Obrisi ponudu</h1>

<h3>Da li ste sigurni da zelite da obrisete ponudu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sezona)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sezona)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumOd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumOd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumDo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumDo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obrisi" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad</a>
    </form>
</div>
